# Environment Configuration

# Node Environment
NODE_ENV=development

# Backend API
PORT=3000
API_BASE_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/dlq_system
MONGODB_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Circuit Breaker Configuration
CB_FAILURE_THRESHOLD=0.5
CB_TIME_WINDOW_MS=60000
CB_OPEN_TIMEOUT_MS=30000
CB_HALF_OPEN_MAX_REQUESTS=10
CB_HALF_OPEN_SUCCESS_THRESHOLD=0.8
CB_MINIMUM_REQUESTS=10

# Retry Configuration
MAX_RETRIES=3
BASE_BACKOFF_MS=1000
MAX_BACKOFF_MS=30000
JITTER_PERCENT=20

# DLQ Worker Configuration
DLQ_POLL_INTERVAL_MS=30000
DLQ_BATCH_SIZE=10
DLQ_MAX_RETRIES=5

# Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_MAX_SIZE=100000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
