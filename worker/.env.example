# Environment Configuration for DLQ Worker

# Node Environment
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dlq_system
MONGODB_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# DLQ Worker Configuration
DLQ_POLL_INTERVAL_MS=30000        # Poll every 30 seconds
DLQ_BATCH_SIZE=10                 # Process 10 messages per batch
DLQ_MAX_RETRIES=5                 # Maximum retry attempts
DLQ_LOCK_TIMEOUT_MS=300000        # 5 minutes lock timeout
DLQ_OFF_PEAK_HOUR=2               # Off-peak retry hour (2 AM)

# Logging Configuration
LOG_LEVEL=info                    # Logging level: error, warn, info, debug
LOG_FILE=logs/dlq-worker.log      # Log file path
LOG_CONSOLE=true                  # Enable console logging
LOG_JSON=false                    # Use JSON format for logs
